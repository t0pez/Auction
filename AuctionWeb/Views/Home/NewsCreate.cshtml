@model AuctionWeb.ViewModels.News.NewsCreateViewModel

@{
    ViewBag.Title = "NewsCreate";
}

<h2 class="mt-3">Create news</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div>

        <div class="form-floating mb-3">
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", @placeholder = "Name", @style = "min-width: 100%" } })
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "ps-4" })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>

        <div class="form-floating mb-3">
            @Html.TextAreaFor(model => model.Text, new { @class = "form-control", @placeholder = "Some placeholder", @style = "min-width: 100%; height:160px" })
            @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "ps-4" })
            @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="mb-3">
        <div>
            @Html.ActionLink("Back to List", "Index", new { }, new { @class = "btn btn-outline-secondary d-inline-block me-3" })

            <input type="submit" value="Create" class="btn btn-primary d-inline-block" />
        </div>
    </div>

</div>
}
