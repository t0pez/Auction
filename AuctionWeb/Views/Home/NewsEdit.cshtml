@model AuctionWeb.ViewModels.News.NewsEditViewModel
@{
    ViewBag.Title = "NewsEdit";
}

<h2>News editing</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div>

    <h4>Edit news</h4>

    <hr />

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    
    <div class="d-none">
        <input class="" id="DateOfCreation" name="DateOfCreation" value="@Model.DateOfCreation" type="text">
    </div>

    <div class="form-floating mb-3">
        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", @placeholder = "Name", @style = "min-width: 100%" } })
        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "ps-4" })
        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
    </div>

    <div class="form-floating mb-3">
        @Html.TextAreaFor(model => model.Text, new { @class = "form-control", @placeholder = "Some placeholder", @style = "min-width: 100%" })
        @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "ps-4" })
        @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        @Html.ActionLink("Back to news list", "Index", new { area = "" }, new { @class = "btn btn-outline-secondary" })

        <button type="submit" class="btn btn-primary">Edit news</button>
    </div>
</div>
}